    }
  ],
  "main": "MMM-Carousel.js",
  "type": "module",
  "scripts": {
    "demo:slides": "cd ../../ && MM_CONFIG_FILE=modules/MMM-Carousel/demo.config.slides.js node --run start:wayland:dev",
    "demo:positional": "cd ../../ && MM_CONFIG_FILE=modules/MMM-Carousel/demo.config.positional.js node --run start:wayland:dev",
    "lint": "eslint && prettier --check .",
    "lint:fix": "eslint --fix && prettier --write .",
    "prepare": "simple-git-hooks",
    "release": "commit-and-tag-version",
    "test": "node --run lint && node --run test:spelling",
    "test:spelling": "cspell . .github"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
